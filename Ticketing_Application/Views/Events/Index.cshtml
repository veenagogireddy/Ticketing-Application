@model IEnumerable<_665Project_ASP.Models.Events>

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Events</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Event Name
            </th>
            <th>
                Event Status
            </th>
            <th>
                Edit Details
            </th>
            <th>
                Delete Event
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @if (item.EventStatus.StartsWith('W'))
                    {
                        <p>Waiting for Approval</p>
                    }
                    else if (item.EventStatus.StartsWith('A'))
                    {
                        <p>Approved</p>
                    }
                    else
                    {
                        <p>Unapproved</p>
                    }
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.EventStatus)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-warning">Edit Event</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger">Delete Event</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Search" asp-controller="Event" class="btn btn-primary">Back to Event Search</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
