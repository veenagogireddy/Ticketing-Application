@model _665Project_ASP.Models.Events

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this event?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Event Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class="col-sm-2">
            Venue
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventVenue)
        </dd>
        <dt class="col-sm-2">
            Duration
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDuration)
        </dd>
        <dt class="col-sm-2">
            Event Date
        </dt>
        <dd class="col-sm-10">
            @Model.EventDate.ToShortDateString()
            @*@Html.DisplayFor(model => model.EventDate)*@
        </dd>
        <dt class="col-sm-2">
            Event Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventStatus)
        </dd>
        <dt class="col-sm-2">
            Event Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventType)
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventCity)
        </dd>
        <dt class="col-sm-2">
            Zip
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventZip)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDescription)
        </dd>
        <dt class="col-sm-2">
            Event Start Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventStartTime)
        </dd>
        <dt class="col-sm-2">
            Host Email ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventOrganizer.EmailId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp; | &nbsp;
        <a asp-action="Index" asp-controller="Events" class="btn btn-primary">Back to Manage Events List</a>
    </form>
</div>
