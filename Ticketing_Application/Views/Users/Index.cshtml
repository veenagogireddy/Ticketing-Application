@model IEnumerable<_665Project_ASP.Models.Users>

@{
    ViewData["Title"] = "Index";
}

<h1>Account Details</h1>
<br />

<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.FirstName)*@
                First Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.LastName)*@
                Last Name
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.MobileNumber)*@
                Mobile Number
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>

            </tr>
        }
    </tbody>
</table>

@foreach (var item in Model)
{
<div>
    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning">Edit Details</a> &nbsp; | &nbsp;
    <a asp-action="Search" asp-controller="Event" class="btn btn-primary">Back to Event Search</a>
</div>
}
